<% if current_user %>
    <p>Hello <%= current_user.username %>!</p>
    <p>Your role is: <%= current_user.role %>
    <% if current_user.admin? %>
        <p>There are <%= User.count %> users.</p>
    <% end %>
    <p>
        You are successfully authenticated with your Devise account.
        You are now ready to interact with this application
    </p>
    <%= link_to "Log out", destroy_user_session_path, 'data-turbo-method': 'delete' %>
<% else %>
    <p>You are not signed in</p>
    <%= link_to "Login", new_user_session_path %>
<% end %>